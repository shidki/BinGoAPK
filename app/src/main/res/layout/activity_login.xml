<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_apptopnav"
    tools:context=".ui.Login.LoginActivity">

    <ImageView
        android:id="@+id/logoGambar"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_capstone"
        android:layout_marginTop="50dp"
        android:alpha="0"
        tools:alpha="100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/Judul"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Sign In"
        android:textAlignment="center"
        android:textSize="30sp"
        android:alpha="0"
        tools:alpha="100"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logoGambar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/keterangan"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Please sign in to continue."
        android:textAlignment="center"
        android:textSize="15sp"
        android:alpha="0"
        tools:alpha="100"
        android:textStyle="bold"
        android:textColor="#BABABA"
        app:layout_constraintTop_toBottomOf="@id/Judul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/containerInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        tools:alpha="100"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/keterangan"
        >
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:textColorHint="#000"
            android:textColor="#000"
            android:background="@drawable/border_input"
            android:hint="Email"
            android:paddingStart="20dp"
            android:layout_marginEnd="40dp"
            android:drawableEnd="@drawable/profile"
            android:paddingEnd="20dp"
            />
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/border_input"
            android:textColorHint="#000"
            android:hint="Password"
            android:password="true"
            android:textColor="#000"
            android:paddingStart="20dp"
            android:layout_marginEnd="40dp"
            android:drawableEnd="@drawable/lock"
            android:paddingEnd="20dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:alpha="0"
        android:enabled="false"
        android:textColor="#fff"
        tools:alpha="100"
        app:layout_constraintTop_toBottomOf="@id/containerInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="MASUK"
        android:background="@drawable/button_background"/>
    <LinearLayout
        android:id="@+id/containerDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0"
        tools:alpha="100"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun? "
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/btnDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textColor="#7793FA"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>