<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sambutanLogin"
    tools:context=".ui.Sambutan.SambutanLogin">

    <TextView
        android:id="@+id/Judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        tools:alpha="100"
        android:text="Selamat Datang Kembali \n di BinGo!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/keterangan"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        tools:alpha="100"
        android:text="Terima kasih telah kembali bersama kami! Lanjutkan memilah sampah untuk keberlanjutan lingkungan kita."
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/Judul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/infoTap"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Tap mana saja untuk lanjut"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#424242"
        android:alpha="0"
        tools:alpha="100"
        app:layout_constraintTop_toBottomOf="@id/keterangan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>
    <ImageView
        android:id="@+id/logoGambar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo_capstone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>