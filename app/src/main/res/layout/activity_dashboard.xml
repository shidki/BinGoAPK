<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.dashboard.DashboardActivity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/navigation"
            app:layout_constraintBottom_toTopOf="@+id/bottomNav"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cnb_menuResource="@menu/bottom_navigation_menu"
            android:background="@drawable/bubble"
            app:cnb_iconSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cnb_unselectedColor="#000000"
            app:cnb_textAppearance="@color/white"
            app:cnb_badgeColor="#FFFFFF"
            app:cnb_orientationMode="horizontal"
            app:cnb_animationDuration="175"
            app:cnb_minExpandedWidth="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
