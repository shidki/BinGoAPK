<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is disabled -->
    <item android:drawable="@drawable/disable_btn" android:state_enabled="false" />
    <!-- State when the button is pressed -->
    <item android:drawable="@drawable/pressed_btn" android:state_pressed="true" />
    <!-- Default state (normal) -->
    <item android:drawable="@drawable/enable_btn" />
</selector>
